<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.ceuw.web.product.ProductEdit"
        datasource="productDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.ceuw.web.product">
    <dsContext>
        <datasource id="productDs"
                    class="de.diedavids.cuba.ceuw.entity.Product"
                    view="product-view">
            <collectionDatasource id="pricesDs"
                                  property="prices"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="productDs">
            <column width="250px">
                <field property="name"/>
                <field property="code"/>
                <field property="tax"/>
            </column>
        </fieldGroup>
        <groupBox id="pricesBox"
                  caption="msg://de.diedavids.cuba.ceuw.entity/Product.prices">
            <table id="pricesTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="value"/>
                    <column id="unit"/>
                </columns>
                <rows datasource="pricesDs"/>
                <buttonsPanel>
                    <button action="pricesTable.create"/>
                    <button action="pricesTable.edit"/>
                    <button action="pricesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
