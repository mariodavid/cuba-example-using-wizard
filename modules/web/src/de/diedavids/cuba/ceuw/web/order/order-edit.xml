<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.ceuw.web.order.OrderEdit"
        datasource="orderDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.ceuw.web.order">
    <dsContext>
        <datasource id="orderDs"
                    class="de.diedavids.cuba.ceuw.entity.Order"
                    view="order-view">
            <collectionDatasource id="orderLinesDs"
                                  property="orderLines"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderDs">
            <column width="250px">
                <field property="orderDate"/>
                <field property="customer"/>
                <field property="deliveryAddress"/>
                <field property="invoiceAddress"/>
            </column>
        </fieldGroup>
        <groupBox id="orderLinesBox"
                  caption="msg://de.diedavids.cuba.ceuw.entity/Order.orderLines">
            <table id="orderLinesTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="product"/>
                </columns>
                <rows datasource="orderLinesDs"/>
                <buttonsPanel>
                    <button action="orderLinesTable.create"/>
                    <button action="orderLinesTable.edit"/>
                    <button action="orderLinesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
