<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.ceuw.web.address.AddressEdit"
        datasource="addressDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.ceuw.web.address">
    <dsContext>
        <datasource id="addressDs"
                    class="de.diedavids.cuba.ceuw.entity.Address"
                    view="_local"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                width="600"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="addressDs">
            <column width="250px">
                <field property="street"/>
                <field property="postalCode"/>
                <field property="city"/>
                <field property="country"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
