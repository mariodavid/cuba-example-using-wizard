<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="de.diedavids.cuba.ceuw.web.checkout.steps.CheckoutStep4Summary"
        messagesPack="de.diedavids.cuba.ceuw.web.checkout.steps">
    <layout>
        <hbox spacing="true" width="100%" height="100%">
            <groupBox showAsPanel="true" caption="Summary" height="400px" spacing="true">
                <fieldGroup id="customerFieldGroup"
                            fieldCaptionWidth="150px"
                            width="100%"
                            datasource="customerDs">
                    <column width="100%">
                        <field editable="false" property="salutation"/>
                        <field editable="false" property="name"/>
                        <field editable="false" property="firstName"/>
                        <field editable="false" property="email"/>
                        <field editable="false" property="phone"/>
                    </column>
                </fieldGroup>
                <fieldGroup id="addressFieldGroup"
                            fieldCaptionWidth="150px"
                            width="100%"
                            datasource="deliveryAddressDs">
                    <column width="100%">
                        <field editable="false" property="street"/>
                        <field editable="false" property="postalCode"/>
                        <field editable="false" property="city"/>
                        <field editable="false" property="country"/>
                    </column>
                </fieldGroup>
            </groupBox>
            <groupBox showAsPanel="true" caption="Items"  height="400px">
                <table id="orderLinesTable"
                       columnControlVisible="false"
                       reorderingAllowed="false"
                       contextMenuEnabled="false"
                       presentations="false"
                       settingsEnabled="false"
                       showSelection="false"
                       sortable="false"
                       width="100%">
                    <columns>
                        <column id="product"/>
                        <column id="amount"/>
                        <column id="amountUnit"/>
                    </columns>
                    <rows datasource="orderLinesDs"/>
                </table>
            </groupBox>
        </hbox>
    </layout>
</window>
