<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="de.diedavids.cuba.ceuw.web.checkout.steps.CheckoutStep2Address"
        messagesPack="de.diedavids.cuba.ceuw.web.checkout.steps">

    <layout expand="addressContentBox">
        <vbox id="addressContentBox" spacing="true" width="100%">
        <groupBox
                spacing="true"
                width="100%"
                caption="Delivery Address">
            <fieldGroup id="deliveryAddressFieldGroup"
                        datasource="deliveryAddressDs">
                <column width="250px">
                    <field property="street"/>
                    <field property="postalCode"/>
                    <field property="city"/>
                    <field property="country"/>
                </column>
            </fieldGroup>
        </groupBox>
        <groupBox
                id="invoiceAddressGroupBox"
                spacing="true"
                height="100%"
                width="100%"
                expand="invoiceAddressFieldGroup"
                caption="Invoice Address">
            <checkBox id="sameAsDeliveryAddress"
                      width="100%"
                      caption="msg://sameAsDeliveryAddress" />
            <fieldGroup id="invoiceAddressFieldGroup"
                        visible="false"
                        width="100%"
                        datasource="invoiceAddressDs">
                <column width="250px">
                    <field property="street"/>
                    <field property="postalCode"/>
                    <field property="city"/>
                    <field property="country"/>
                </column>
            </fieldGroup>
        </groupBox>
        </vbox>
    </layout>
</window>
