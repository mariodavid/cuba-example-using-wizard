<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
  xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
  caption="msg://productBrowse.caption"
  focusComponent="productsTable"
  messagesPack="de.diedavids.cuba.ceuw.web.screens.product">
  <data readOnly="true">
    <collection id="productsDc"
      class="de.diedavids.cuba.ceuw.entity.Product">
      <view extends="_local">
        <property name="prices" view="_local"/>
      </view>
      <loader id="productsDl">
        <query>
          <![CDATA[select e from ceuw$Product e]]>
        </query>
      </loader>
    </collection>
  </data>
  <dialogMode height="600"
    width="800"/>
  <layout expand="productsTable"
    spacing="true">
    <filter id="filter"
      applyTo="productsTable"
      dataLoader="productsDl">
      <properties include=".*"/>
    </filter>
    <groupTable id="productsTable"
      width="100%"
      dataContainer="productsDc">
      <actions>
        <action id="create" type="create"/>
        <action id="edit" type="edit"/>
        <action id="remove" type="remove"/>
      </actions>
      <columns>
        <column id="name"/>
        <column id="code"/>
        <column id="tax"/>
      </columns>
      <rowsCount/>
      <buttonsPanel id="buttonsPanel"
        alwaysVisible="true">
        <button id="createBtn" action="productsTable.create"/>
        <button id="editBtn" action="productsTable.edit"/>
        <button id="removeBtn" action="productsTable.remove"/>
      </buttonsPanel>
    </groupTable>
    <hbox id="lookupActions" spacing="true" visible="false">
      <button action="lookupSelectAction"/>
      <button action="lookupCancelAction"/>
    </hbox>
  </layout>
</window>
