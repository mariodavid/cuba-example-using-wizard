<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="de.diedavids.cuba.ceuw.web.dynamiccheckout.steps.DynamicCheckoutStep3Items"
        messagesPack="de.diedavids.cuba.ceuw.web.dynamiccheckout.steps">
    <layout>
        <table id="orderLinesTable"
               editable="true"
               height="400px"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="positionUp"
                        icon="font-icon:ARROW_UP"
                        invoke="positionUp"
                        trackSelection="true"
                        caption=""
                />
                <action id="positionDown"
                        invoke="positionDown"
                        icon="font-icon:ARROW_DOWN"
                        caption=""
                        trackSelection="true"
                />
            </actions>
            <columns>
                <column id="position"/>
                <column id="product"
                        editable="true"/>
                <column id="amount"
                        editable="true"/>
                <column id="amountUnit"
                        editable="true"/>
            </columns>
            <rows datasource="orderLinesDs"/>
            <buttonsPanel>
                <button action="orderLinesTable.create"/>
                <button action="orderLinesTable.edit"/>
                <button action="orderLinesTable.remove"/>
                <button action="orderLinesTable.positionUp"
                        icon="font-icon:ARROW_UP"/>
                <button action="orderLinesTable.positionDown"
                        />
            </buttonsPanel>
        </table>
    </layout>
</window>
