<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.ceuw.web.orderline.OrderLineEdit"
        datasource="orderLineDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.ceuw.web.orderline">
    <dsContext>
        <datasource id="orderLineDs"
                    class="de.diedavids.cuba.ceuw.entity.OrderLine"
                    view="orderLine-view"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                width="600"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderLineDs">
            <column width="250px">
                <field property="position" editable="false"/>
                <field property="product"/>
                <field property="amount"/>
                <field property="amountUnit"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
