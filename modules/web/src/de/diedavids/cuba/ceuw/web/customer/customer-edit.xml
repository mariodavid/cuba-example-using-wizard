<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.ceuw.web.customer.CustomerEdit"
        datasource="customerDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.ceuw.web.customer">
    <dsContext>
        <datasource id="customerDs"
                    class="de.diedavids.cuba.ceuw.entity.Customer"
                    view="customer-view">
            <collectionDatasource id="addressesDs"
                                  property="addresses"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="customerDs">
            <column width="250px">
                <field property="name"/>
                <field property="firstName"/>
                <field property="email"/>
            </column>
        </fieldGroup>
        <groupBox id="addressesBox"
                  caption="msg://de.diedavids.cuba.ceuw.entity/Customer.addresses">
            <table id="addressesTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="street"/>
                    <column id="city"/>
                    <column id="postalCode"/>
                    <column id="country"/>
                </columns>
                <rows datasource="addressesDs"/>
                <buttonsPanel>
                    <button action="addressesTable.create"/>
                    <button action="addressesTable.edit"/>
                    <button action="addressesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
